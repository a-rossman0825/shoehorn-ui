{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,
    "types": ["vitest/globals", "node"],

    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,

    "outDir": "dist",
    "rootDir": "src",

    "jsx": "preserve",
    "useDefineForClassFields": true,

    "lib": ["ES2020", "DOM"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
